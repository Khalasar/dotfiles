#!/bin/sh

pwd=$(pwd)

prog=$(basename $0)
uid=$(id -u)
docker_image=${DOCKER_IMAGE_ELIXIR:-splattael/elixir}
src_dir=/src
home_dir=${DOCKER_HOME_DIR:-$src_dir}

echo "Mounting $pwd to $src_dir"
echo "HOME=$home_dir"

if [ "$prog" = "in_elixir" ]; then
  prog="$1"
  shift
fi

docker run -it --rm \
  -v $pwd:$src_dir \
  -v $home_dir:$home_dir \
  -e DOCKER_USER_UID=$uid \
  -e HOME=$home_dir \
  -w $src_dir \
  $DOCKER_RUN_OPTS \
  $docker_image $prog $*
